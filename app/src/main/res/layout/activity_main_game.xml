<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainGame">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Press to start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button7"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="36sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3"/>
        <Button
                android:text="Check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button6"/>
        <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button8"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>